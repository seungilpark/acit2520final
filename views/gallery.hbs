    <meta http-equiv="X-UA-Compatible" content="">
    <title>{{ title }}</title>
</head>

<body>
    {{> nav }}
    <div class="mainDiv">
        <form action="/gallery" method="post">
        <input id="textInput" class="textInput" name="search_term" type="text" placeholder="Type Images You Want to Search">
